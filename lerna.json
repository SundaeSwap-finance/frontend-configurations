{
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "npmClient": "bun",
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md",
    "**/.storybook/**"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "private": false,
      "allowBranch": ["main"]
    },
    "publish": {
      "message": "chore(release): publish"
    }
  },
  "version": "independent"
}
